package Lesson_7;

public class Plate {
    private int food;

    public Plate(int food) {
        this.food = food;
    }

    public void decreaseFood(int n) {
        food -= n;
    }
    public boolean checkFood(int n){
        return (food - n) >= 0;
    }

    public void addFood(){
        this.food += 400;
        System.out.println("В миску добавили 400 грамм корма");
    }

    @Override
    public String toString() {
        return "Plate{" +
                "food=" + food +
                '}';
    }
}