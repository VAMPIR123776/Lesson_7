package Lesson_7;

public class Cat {
    private String name;
    private int appetite;
    private boolean hungry = false;

    public Cat(String name, int appetite) {
        this.name = name;
        this.appetite = appetite;
    }

    public void eat(Plate p) {
        p.decreaseFood(appetite);
            hungry = true;
    }

    public String hungry() {
        if (hungry) {
            return name + " сыт";
        } else {
            return name + " голоден";
        }
    }

    String getName(){
        return name;
    }

    int getAppetite(){
        return appetite;
    }
}